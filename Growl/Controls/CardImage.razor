@using Growl.Services

<img 
    src="img/@(Card.ImageFileName)"
    alt="@(Card switch {
                GoldCard => "Gold",
                BiteCard => "Bite",
                CharmCard => "Charm",
                WoundCard => "Wound",
                SalveCard => "Salve",
                _ => "Unknown"
             })"
    class="@Class"
    style="@Style"
/>

@code {
    [Parameter]
    public ICard Card { get; set; }

    [Parameter]
    public string Class { get; set; }

    [Parameter]
    public string Style { get; set; }
}
